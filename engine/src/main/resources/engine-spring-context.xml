<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="db-spring-context.xml"/>

    <bean id="trainingService" class="service.training.TrainingServiceImpl">
        <constructor-arg ref="trainingDao"/>
    </bean>

    <bean id="gerWordsValidator" class="validator.strategy.GermanWordsValidatorStrategy"/>
    <bean id="rusWordsValidator" class="validator.strategy.RussianWordsValidatorStrategy"/>
    <bean id="defaultWordsValidator" class="validator.strategy.DefaultWordsValidatorStrategy"/>
</beans>