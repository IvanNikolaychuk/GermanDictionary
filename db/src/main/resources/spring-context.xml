<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

        <bean id="dbCredentials" class="credentials.PostgresCredentials" init-method="init"/>

        <bean id="dbConnProvider" class="provider.DbConnectionProvider">
                <constructor-arg type="credentials.DbCredentials" ref="dbCredentials"/>
        </bean>

        <bean id="userDao" class="dao.UserDaoImpl">
                <constructor-arg type="provider.DbConnectionProvider" ref="dbConnProvider"/>
        </bean>
</beans>